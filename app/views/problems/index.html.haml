%p#notice= notice
%h1 Problems
%table
  %thead
    %tr
      %th Description
      %th References
      %th{:colspan => "3"}
  %tbody
    - @problems.each do |problem|
      %tr
        %td= problem.description
        %td= link_to 'Show', problem , {:remote => true,"data-target" => "#myModal", "data-toggle" => "modal", "class" => "btn btn-primary"}
        %td= link_to 'Edit', edit_problem_path(problem) , {:remote => true,"data-target" => "#myModal", "data-toggle" => "modal", "class" => "btn btn-primary"}
        %td= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Problem', new_problem_path,{:remote => true,"data-target" => "#myModal", "data-toggle" => "modal", "class" => "btn btn-primary"}
= link_to 'Non Modal New Problem', problems_non_modal_path
